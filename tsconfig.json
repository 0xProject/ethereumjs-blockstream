{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "output",
    "rootDir": ".",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": [ "es5", "es2015.promise", "dom" ]
  },
  "include": [
    "source/**/*.ts",
    "tests/**/*.ts"
  ]
}
